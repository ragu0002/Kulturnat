<style>
  nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 50px;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 5vh 2vw;
    transition: top 0.75s;
  }

  /* LINKS */
  a {
    text-decoration: none;
  }
  .logo {
    display: flex;
    height: auto;
    width: 4rem;
    margin: 1vh;
    z-index: 3;
  }

  .menu_list {
    display: none;
  }

  .menu_icon {
    z-index: 3;
    position: relative;
    margin: 1vh;
    width: 10vh;
    max-width: 40px;
    height: 2rem;
    display: flex;
    flex-direction: column;
    cursor: pointer;
    justify-content: space-around;
  }

  .line {
    width: 100%;
    height: 0.2rem;
    margin-bottom: 0.5rem;
    background-color: var(--aksent);
    border-radius: 24px;
    transition: 1s;
    transform-origin: center;
  }

  .menu_icon.active .line {
    position: absolute;
    left: 0;
    width: 100%;
  }

  .menu_icon.active .line:nth-child(1) {
    top: 45%;
    transform: rotate(45deg);
    background-color: var(--aksent);
    transition: 1s;
  }

  .menu_icon.active .line:nth-child(3) {
    bottom: 20%;
    transform: rotate(-45deg);
    background-color: var(--aksent);
    transition: 1s;
  }

  .menu_icon.active .line:nth-child(2) {
    opacity: 0;
    transition: 0.1s;
  }
</style>
